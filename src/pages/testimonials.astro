---
import Layout from '../layouts/Layout.astro';
import { createReader } from '@keystatic/core/reader';
import keystaticConfig from '../../keystatic.config';

const reader = createReader(import.meta.env.PWD || '.', keystaticConfig);

// 獲取所有學員見證（按排序順序）
let testimonials = [];
try {
  const allTestimonials = await reader.collections.testimonials.all();
  testimonials = allTestimonials.sort((a, b) => {
    const orderA = parseInt(a.entry.order || '999') || 999;
    const orderB = parseInt(b.entry.order || '999') || 999;
    return orderA - orderB;
  });
} catch (e) {
  console.warn('無法讀取學員見證:', e);
}
---

<Layout 
  title="學員見證 | AMAR"
  description="真實的改變，來自真實的體驗。聽聽學員們如何透過系統排列找回生命的力量。"
>
  <!-- Navbar -->
  <nav class="fixed w-full z-50 transition-all duration-300 bg-white/90 backdrop-blur-md shadow-md py-3">
    <div class="container mx-auto px-6 flex justify-between items-center">
      <div class="text-2xl font-serif font-bold text-indigo-900 tracking-wider flex items-center gap-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 002 2h2.945M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <a href="/">AMAR</a>
      </div>
      <div class="hidden md:flex items-center gap-8 font-medium text-slate-600">
        <a href="/#problem" class="hover:text-indigo-600 transition">生命卡點</a>
        <a href="/#method" class="hover:text-indigo-600 transition">系統原理</a>
        <a href="/#instructor" class="hover:text-indigo-600 transition">導師介紹</a>
        <a href="/testimonials" class="text-indigo-600 font-semibold">學員見證</a>
        <a href="/#offer" class="bg-indigo-900 text-white px-6 py-2 rounded-full hover:bg-indigo-800 transition">
          立即報名
        </a>
      </div>
    </div>
  </nav>

  <!-- Testimonials Header -->
  <header class="pt-24 pb-12 bg-gradient-to-br from-slate-50 via-indigo-50 to-slate-200">
    <div class="container mx-auto px-6 text-center">
      <h1 class="text-4xl md:text-5xl font-serif font-bold text-slate-900 mb-4">
        學員見證
      </h1>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto">
        真實的改變，來自真實的體驗。聽聽學員們如何透過系統排列找回生命的力量。
      </p>
    </div>
  </header>

  <!-- Testimonials Grid -->
  <main class="container mx-auto px-6 py-12">
    {testimonials.length === 0 ? (
      <div class="text-center py-12">
        <p class="text-slate-500 text-lg">目前尚無學員見證，請到 Keystatic 後台新增見證。</p>
        <a 
          href="/keystatic" 
          class="inline-block mt-4 bg-indigo-900 text-white px-6 py-3 rounded-full hover:bg-indigo-800 transition"
        >
          前往 Keystatic 後台
        </a>
      </div>
    ) : (
      <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        {testimonials.map((testimonial) => (
            <article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300 border border-slate-100">
              {testimonial.entry.coverImage && (
                <img 
                  src={testimonial.entry.coverImage} 
                  alt={testimonial.entry.name}
                  class="w-full h-48 object-cover"
                />
              )}
              <div class="p-6">
                <div class="flex items-center gap-1 mb-4">
                  {[...Array(testimonial.entry.rating || 5)].map(() => (
                    <svg class="w-5 h-5 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  ))}
                </div>
                
                {testimonial.entry.excerpt && (
                  <p class="text-slate-700 mb-4 leading-relaxed italic line-clamp-4">
                    {testimonial.entry.excerpt}
                  </p>
                )}
                
                <div class="flex items-center gap-4 pt-4 border-t border-slate-200">
                  <div class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-400 to-purple-400 flex items-center justify-center text-white font-bold">
                    {testimonial.entry.name.charAt(0)}
                  </div>
                  <div>
                    <p class="font-semibold text-slate-900">{testimonial.entry.name}</p>
                    <p class="text-sm text-slate-500">
                      {new Date(testimonial.entry.publishedDate).toLocaleDateString('zh-TW', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </p>
                  </div>
                </div>
              </div>
            </article>
        ))}
      </div>
    )}
  </main>

  <!-- Footer -->
  <footer class="bg-slate-950 text-slate-400 py-12 border-t border-slate-800 mt-12">
    <div class="container mx-auto px-6 text-center">
      <p class="text-sm">© 2024 AMAR. All rights reserved.</p>
    </div>
  </footer>
</Layout>

